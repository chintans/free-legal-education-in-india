---
import Container from "@components/container.astro";
import { getFormattedDate } from "@utils/all";
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <Container>
    <div class="mx-auto max-w-4xl px-4 md:px-6 mt-14 w-full">
      <span class="text-blue-600 uppercase tracking-wider text-sm font-medium">
        {frontmatter.category}
      </span>
      <h1 class="text-3xl lg:text-5xl font-bold lg:tracking-tight mt-2">
        {frontmatter.title}
      </h1>
      <div class="flex gap-3 mt-4 items-center flex-wrap">
        <span class="font-medium">
          {frontmatter.author}
        </span>
        <span class="text-gray-500">•</span>
        <time datetime={frontmatter.publishDate}>
          {getFormattedDate(frontmatter.publishDate)}
        </time>
        <span class="text-gray-500 hidden md:block">•</span>
        <div class="w-full md:w-auto flex flex-wrap gap-3">
          {
            frontmatter.tags.map((tag) => (
              <span class="text-sm">#{tag}</span>
            ))
          }
        </div>
      </div>
    </div>

    <div class="mx-auto prose prose-lg mt-6 px-4 md:px-6 max-w-4xl w-full">
      <article>
        <slot />
      </article>
    </div>
    
    <div class="text-center mt-8 px-4 md:px-6 w-full">
      <a
        href="/blog"
        class="bg-blue-500 text-white px-5 py-3 rounded-md hover:bg-blue-600 transition inline-block"
        >← Back to Blog</a
      >
    </div>
  </Container>
</Layout>
