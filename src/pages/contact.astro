---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc" class="text-gray-700 dark:text-gray-300">
        Get in touch to schedule a session.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-900 dark:text-white">Contact Us</h2>
        <p class="text-gray-700 dark:text-gray-300 mt-3">
          Have questions about our program? Fill out the form or contact us directly.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-700 dark:text-gray-300">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>1734 Sanfransico, CA 93063</span>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-700 dark:text-gray-300">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" />
            <a href="mailto:contact@example.com">contact@example.com</a>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-700 dark:text-gray-300">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" />
            <a href="tel:+1 (987) 4587 899">+1 (987) 4587 899</a>
          </div>
        </div>
      </div>
      <div class="bg-white dark:bg-gray-800 p-8 rounded-xl shadow-sm">
        <form>
          <div class="mb-6">
            <label for="name" class="block mb-2 text-sm text-gray-900 dark:text-white">Full Name</label>
            <input
              type="text"
              name="name"
              id="name"
              required
              class="w-full px-3 py-2 text-gray-900 dark:text-white placeholder-gray-400 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="John Doe"
            />
          </div>
          <div class="mb-6">
            <label for="email" class="block mb-2 text-sm text-gray-900 dark:text-white">Email</label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="w-full px-3 py-2 text-gray-900 dark:text-white placeholder-gray-400 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="john@example.com"
            />
          </div>
          <div class="mb-6">
            <label for="message" class="block mb-2 text-sm text-gray-900 dark:text-white">Message</label>
            <textarea
              name="message"
              id="message"
              required
              class="w-full px-3 py-2 text-gray-900 dark:text-white placeholder-gray-400 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="Your message here..."
              rows="6"
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full px-5 py-3 text-white bg-blue-500 dark:bg-blue-600 rounded-md hover:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
            Send Message
          </button>
        </form>
      </div>
    </div>
  </Container>
</Layout>
